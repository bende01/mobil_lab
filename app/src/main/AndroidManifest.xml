<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spotify_api">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/spotify_ph_app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlaylistHelper"
        android:usesCleartextTraffic="true">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity android:name=".ViewModel.SplashActivity" />
        <activity
            android:name=".ViewModel.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PlaylistHelper.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewModel.FriendListActivity"
            android:label="FriendList"
            android:theme="@style/Theme.PlaylistHelper.NoActionBar" />
        <activity
            android:name=".ViewModel.PlaylistActivity"
            android:label="Playlist"
            android:theme="@style/Theme.PlaylistHelper.NoActionBar" />
    </application>

</manifest>